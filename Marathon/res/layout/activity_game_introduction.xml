<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/title" >

        <LinearLayout
            android:id="@+id/back_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <cn.cnic.marathon.ui.CustomTextView
                style="@style/layout_ww"
                android:layout_marginLeft="10sp"
                android:text="@string/arrow_back"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                style="@style/layout_ww"
                android:text="@string/back"
                android:textColor="@color/wheat"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            style="@style/layout_ww"
            android:text="球赛介绍"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerInParent="true" 
            />
    </RelativeLayout>

    <TextView
        style="@style/layout_ww"
        android:layout_gravity="center_horizontal"
        android:text="永乐盛夏足球季" 
        />

    <ImageView 
        style="@style/layout_ww"
        android:src="@drawable/bs"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        style="@style/layout_ww"
        android:text="    2015年7月18日鸟巢体育场,拜仁尼黑对阵瓦伦西亚。" 
        />

</LinearLayout>