<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/pop_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_shape"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/infowindow_img"
            android:layout_width="25dp"
            android:layout_height="25dp" 
            android:layout_gravity="center_vertical"
            android:src="@drawable/point_friends3"/>

        <TextView
            android:id="@+id/infowindow_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/infowindow_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/lightgray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="米"
            android:textColor="@color/lightgray" />
    </LinearLayout>

    <TextView
        android:id="@+id/infowindow_meet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:text="约见"
        android:textColor="@color/blue"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
       
        android:orientation="vertical" >

        <TextView
            android:id="@+id/infowindow_sendmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="发消息"
            android:textColor="@color/blue"
            android:textSize="15sp" />

    </LinearLayout>
        <TextView
            android:id="@+id/infowindow_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:text="关闭显示"
            android:textColor="@color/blue"
            android:textSize="15sp" />

</LinearLayout>