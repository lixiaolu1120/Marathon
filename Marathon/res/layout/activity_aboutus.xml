<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/title" >

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <cn.cnic.marathon.ui.CustomTextView
                style="@style/layout_ww"
                android:layout_marginLeft="10sp"
                android:text="@string/arrow_back"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                style="@style/layout_ww"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            style="@style/layout_ww"
            android:layout_centerInParent="true"
            android:text="联系我们"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >

        <TextView
            style="@style/layout_ww"
            android:layout_gravity="center_horizontal"
            android:text="智慧安全联盟"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            style="@style/layout_ww"
            android:layout_marginTop="20dp"
            android:text="智慧安全联盟由清华大学公共安全研究院牵头，参与单位包括..."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            style="@style/layout_ww"
            android:layout_marginTop="10dp"
            android:text="联系电话： 010"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            style="@style/layout_ww"
            android:text="电子邮箱：aa@aa"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>