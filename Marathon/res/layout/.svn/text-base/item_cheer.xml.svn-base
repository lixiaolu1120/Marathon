<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/cheer_avatar"
        style="@style/layout_ww"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/about_us" 
        android:src="@drawable/runner"
        android:layout_centerVertical="true"
        >
        </ImageView>

    <LinearLayout
        style="@style/layout_ww"
        android:orientation="vertical"
        android:layout_toRightOf="@id/cheer_avatar"
        android:layout_centerVertical="true" 
        >

        <TextView
            android:id="@+id/cheer_name"
            style="@style/layout_ww" />

        <TextView android:id="@+id/cheer_desc"
            style="@style/layout_ww" 
            />
    </LinearLayout>
</RelativeLayout>