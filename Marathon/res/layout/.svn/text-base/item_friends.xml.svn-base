<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/friend_avatar"
        style="@style/layout_ww"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/about_us" 
        android:src="@drawable/runner"
        android:layout_centerVertical="true"
        >
        </ImageView>

    <LinearLayout
        style="@style/layout_ww"
        android:orientation="vertical"
        android:layout_toRightOf="@id/friend_avatar"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true" 
        >

        <TextView
            android:id="@+id/friend_name"
            style="@style/layout_ww" />

        <TextView android:id="@+id/friend_desc"
            android:layout_marginTop="10dp"
            style="@style/layout_ww" 
            />
    </LinearLayout>

    <cn.cnic.marathon.ui.CustomTextView
        style="@style/layout_ww"
        android:id="@+id/show_pos"
        android:text="@string/kanguo"
        android:textColor="@color/gray"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        />

</RelativeLayout>